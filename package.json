{
	"private": true,
	"workspaces": ["next", "slidev", "marp"],
	"scripts": {
		"build": "npm-run-all marp:build slidev:build next:build",
		"dev": "npm-run-all marp:build slidev:build next:dev",
		"next:build": "cd next && bun run build",
		"next:dev": "cd next && SLIDES_DIR=\"$(git rev-parse --show-toplevel)/.out\" bun run dev",
		"slidev:build": "cd slidev && bun run build",
		"marp:build": "cd marp && bun run build"
	},
	"devDependencies": {
		"npm-run-all": "^4.1.5"
	}
}
